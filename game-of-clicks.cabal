    tests/good-inputs/blocked-within.txt
    tests/bad-inputs/empty-file.txt
    tests/bad-inputs/missing-viewables.txt
    tests/bad-inputs/no-viewables-count.txt

executable game-of-clicks
    -- .hs or .lhs file containing the Main module.
    main-is:  GameOfClicks.hs

    -- Modules included in this executable, other than Main.
    -- other-modules:

    -- LANGUAGE extensions used by modules in this package.
    other-extensions:
      ScopedTypeVariables

    -- Other library packages from which modules are imported.
    build-depends:
        base ==4.14.1.0
      , mtl  ==2.2.2
      , directory ==1.3.6.0
      , filepath ==1.4.2.1

    -- Directories containing source files.
    hs-source-dirs: app

    -- Base language which the package is written in.
    default-language: Haskell2010

    -- GHC options.
    ghc-options:  -O2 -fforce-recomp -Wall -Werror
