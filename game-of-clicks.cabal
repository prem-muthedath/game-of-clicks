extra-source-files:
    CHANGELOG.md
    cabal.project.freeze
    docs/problem-statement.txt
    tests/good-inputs/normal.txt
    tests/good-inputs/zero-blocked.txt
    tests/good-inputs/zero-viewables.txt
    tests/good-inputs/same-high-low-blocked.txt
    tests/good-inputs/same-high-low-viewable.txt
